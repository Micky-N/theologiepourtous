<!-- Biblical Teaching Image - SVG -->
<svg width="800" height="450" viewBox="0 0 800 450" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#2D3748;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#4A5568;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#718096;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="lightGradient" cx="50%" cy="30%" r="60%">
      <stop offset="0%" style="stop-color:#FFD700;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#FFA500;stop-opacity:0.2" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="450" fill="url(#bgGradient)" />
  
  <!-- Divine light from above -->
  <ellipse cx="400" cy="0" rx="300" ry="150" fill="url(#lightGradient)" />
  
  <!-- Study table -->
  <rect x="200" y="280" width="400" height="15" fill="#8B4513" rx="5" />
  <rect x="220" y="295" width="12" height="60" fill="#654321" />
  <rect x="568" y="295" width="12" height="60" fill="#654321" />
  
  <!-- Large open Bible in center -->
  <rect x="300" y="220" width="200" height="60" fill="#8B0000" rx="5" />
  <rect x="305" y="225" width="190" height="50" fill="#FFF8DC" rx="3" />
  <line x1="400" y1="225" x2="400" y2="275" stroke="#8B0000" stroke-width="3" />
  
  <!-- Bible text (Hebrew and Greek characters) -->
  <!-- Hebrew text simulation -->
  <text x="320" y="240" font-family="serif" font-size="8" fill="#8B0000" text-anchor="start">בראשית ברא אלהים</text>
  <text x="320" y="250" font-family="serif" font-size="8" fill="#8B0000" text-anchor="start">את השמים ואת הארץ</text>
  <text x="320" y="260" font-family="serif" font-size="8" fill="#8B0000" text-anchor="start">והארץ היתה תהו ובהו</text>
  
  <!-- Greek text simulation -->
  <text x="420" y="240" font-family="serif" font-size="8" fill="#8B0000" text-anchor="start">Ἐν ἀρχῇ ἦν ὁ λόγος</text>
  <text x="420" y="250" font-family="serif" font-size="8" fill="#8B0000" text-anchor="start">καὶ ὁ λόγος ἦν πρὸς</text>
  <text x="420" y="260" font-family="serif" font-size="8" fill="#8B0000" text-anchor="start">τὸν θεόν</text>
  
  <!-- Study materials around -->
  <!-- Concordance -->
  <rect x="150" y="250" width="80" height="12" fill="#000080" rx="2" />
  <text x="190" y="260" font-family="Arial" font-size="8" fill="white" text-anchor="middle">CONCORDANCE</text>
  
  <!-- Commentary books -->
  <rect x="160" y="238" width="70" height="12" fill="#8B4513" rx="2" />
  <text x="195" y="248" font-family="Arial" font-size="7" fill="white" text-anchor="middle">COMMENTARY</text>
  
  <rect x="170" y="226" width="60" height="12" fill="#006400" rx="2" />
  <text x="200" y="236" font-family="Arial" font-size="7" fill="white" text-anchor="middle">THEOLOGY</text>
  
  <!-- Language dictionaries -->
  <rect x="570" y="250" width="80" height="12" fill="#4B0082" rx="2" />
  <text x="610" y="260" font-family="Arial" font-size="7" fill="white" text-anchor="middle">HEBREW DICT.</text>
  
  <rect x="560" y="238" width="80" height="12" fill="#8B008B" rx="2" />
  <text x="600" y="248" font-family="Arial" font-size="7" fill="white" text-anchor="middle">GREEK DICT.</text>
  
  <!-- Magnifying glass -->
  <circle cx="520" cy="200" r="15" fill="none" stroke="#C0C0C0" stroke-width="3" />
  <line x1="533" y1="213" x2="545" y2="225" stroke="#C0C0C0" stroke-width="3" />
  
  <!-- Scroll with ancient text -->
  <rect x="100" y="180" width="120" height="30" fill="#F5DEB3" rx="15" />
  <circle cx="100" cy="195" r="15" fill="#DEB887" />
  <circle cx="220" cy="195" r="15" fill="#DEB887" />
  
  <!-- Ancient text on scroll -->
  <text x="160" y="190" font-family="serif" font-size="6" fill="#8B4513" text-anchor="middle">MANUSCRIPT</text>
  <text x="160" y="200" font-family="serif" font-size="6" fill="#8B4513" text-anchor="middle">ANCIENT TEXT</text>
  
  <!-- Teaching elements -->
  <!-- Podium/lectern -->
  <rect x="50" y="320" width="60" height="80" fill="#654321" />
  <rect x="45" y="315" width="70" height="10" fill="#8B4513" />
  <polygon points="45,315 55,305 105,305 115,315" fill="#A0522D" />
  
  <!-- Small Bible on podium -->
  <rect x="60" y="305" width="40" height="8" fill="#8B0000" rx="2" />
  
  <!-- Cross on wall -->
  <rect x="380" y="100" width="8" height="25" fill="#FFD700" />
  <rect x="370" y="110" width="28" height="6" fill="#FFD700" />
  
  <!-- Apologetics shield -->
  <path d="M 650 150 L 670 140 L 690 150 L 690 170 L 670 180 L 650 170 Z" fill="#4169E1" stroke="#000080" stroke-width="2" />
  <rect x="665" y="155" width="10" height="15" fill="#FFD700" />
  <rect x="660" y="160" width="20" height="5" fill="#FFD700" />
  
  <!-- Study lamp -->
  <rect x="250" y="200" width="4" height="20" fill="#696969" />
  <ellipse cx="252" cy="195" rx="12" ry="8" fill="#FFFF99" opacity="0.7" />
  
  <!-- Greek alphabet on wall -->
  <text x="600" y="120" font-family="serif" font-size="16" fill="#D3D3D3" text-anchor="start">ΑΒΓΔΕΖ</text>
  <text x="600" y="140" font-family="serif" font-size="16" fill="#D3D3D3" text-anchor="start">ΗΘΙΚΛΜ</text>
  
  <!-- Hebrew alphabet on wall -->
  <text x="150" y="120" font-family="serif" font-size="16" fill="#D3D3D3" text-anchor="start">אבגדהו</text>
  <text x="150" y="140" font-family="serif" font-size="16" fill="#D3D3D3" text-anchor="start">זחטיכל</text>
  
  <!-- Light beams from above highlighting the Bible -->
  <g opacity="0.4">
    <polygon points="350,0 380,220 420,220 450,0" fill="#FFD700" />
    <polygon points="360,0 390,220 410,220 440,0" fill="#FFFF99" />
  </g>
  
  <!-- Text overlay -->
  <rect x="50" y="380" width="700" height="60" fill="rgba(0,0,0,0.8)" rx="10" />
  <text x="400" y="405" font-family="Arial, sans-serif" font-size="20" fill="white" text-anchor="middle" font-weight="bold">Passion pour l'Enseignement</text>
  <text x="400" y="425" font-family="Arial, sans-serif" font-size="14" fill="#E2E8F0" text-anchor="middle">Doctrine • Contextes • Hébreu et Grec • Apologétique</text>
</svg>